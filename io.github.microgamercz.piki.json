{
  "id": "io.github.microgamercz.piki",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.9",
  "base": "io.qt.qtwebengine.BaseApp",
  "base-version": "6.9",
  "sdk": "org.kde.Sdk",
  "command": "piki",
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=wayland",
    "--device=dri"
  ],
  "separate-locales": false,

  "modules": [
    {
      "name": "futuresql",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "git",
          "url": "https://invent.kde.org/libraries/futuresql.git"
        }
      ]
    },
    {
      "name": "kirigami-addons",
      "config-opts": ["-DBUILD_TESTING=OFF", "-DCMAKE_BUILD_TYPE=Release"],
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-1.8.1.tar.xz",
          "sha256": "00028ae4df99e250518345ea28d9cdf49d700e9acac482734bb51384da11f945",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 242933,
            "stable-only": true,
            "url-template": "https://download.kde.org/stable/kirigami-addons/kirigami-addons-$version.tar.xz"
          }
        }
      ]
    },
    {
      "name": "libsecret",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/libsecret/0.21/libsecret-0.21.7.tar.xz",
          "sha256": "6b452e4750590a2b5617adc40026f28d2f4903de15f1250e1d1c40bfd68ed55e",
          "x-checker-data": {
            "type": "gnome",
            "name": "libsecret",
            "stable-only": true
          }
        }
      ],
      "config-opts": [
        "-Dgtk_doc=false",
        "-Dintrospection=false",
        "-Dmanpage=false",
        "-Dvapi=false",
        "-Dcrypto=disabled"
      ]
    },
    {
      "name": "qtkeychain",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/frankosterfeld/qtkeychain/archive/0.15.0.tar.gz",
          "sha256": "f4254dc8f0933b06d90672d683eab08ef770acd8336e44dfa030ce041dc2ca22",
          "x-checker-data": {
            "type": "anitya",
            "project-id": 4138,
            "stable-only": true,
            "url-template": "https://github.com/frankosterfeld/qtkeychain/archive/$version.tar.gz"
          }
        }
      ],
      "config-opts": [
        "-DCMAKE_INSTALL_LIBDIR=/app/lib",
        "-DLIB_INSTALL_DIR=/app/lib",
        "-DBUILD_TRANSLATIONS=NO",
        "-DBUILD_WITH_QT6=ON"
      ]
    },
    {
      "name": "piqi",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/MicrogamerCz/Piqi",
          "branch": "main"
        }
      ]
    },
    {
      "name": "piki",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "sources": [{ "type": "dir", "path": ".", "skip": [".git"] }]
    }
  ]
}
